# Integration Gateway - Backend Environment Variables
# Copy this file to .env and update with your values

# Server
PORT=3545
NODE_ENV=production

# MongoDB
MONGODB_URI=mongodb://user:password@host:port/database
MONGODB_DATABASE=integration_gateway

# Security (generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
API_KEY=your-secret-api-key-change-me
JWT_SECRET=your-jwt-secret-change-me-use-long-random-string

# Optional: Communication / Frontend URLs
# COMMUNICATION_SERVICE_URL=https://your-domain.com/api/sendNotification
# FRONTEND_URL=https://your-domain.com
