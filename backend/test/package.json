{
  "name": "event-gateway-tests",
  "version": "1.0.0",
  "description": "Unit tests for event gateway",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --forceExit --coverage --testPathIgnorePatterns='clevertap-live|comprehensive-live|real-delivery|workers-integration-real'"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "supertest": "^6.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "rootDir": "../",
    "testMatch": [
      "<rootDir>/test/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.js",
      "!<rootDir>/src/config.js",
      "!<rootDir>/src/event-sources/**",
      "!<rootDir>/src/data/seed-*.js",
      "!<rootDir>/src/data/mark-*.js"
    ],
    "coverageDirectory": "<rootDir>/test/coverage",
    "verbose": true,
    "coverageProvider": "v8",
    "coverageThreshold": {
      "global": {
        "branches": 45,
        "functions": 20,
        "lines": 15,
        "statements": 15
      }
    },
    "coverageReporters": ["text", "lcov", "json-summary"]
  }
}
