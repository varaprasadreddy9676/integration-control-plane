{
  "name": "integration-control-plane-backend",
  "version": "1.0.0",
  "description": "Integration Gateway - Backend API service for delivering events to external systems",
  "main": "src/index.js",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "dev": "nodemon --max-old-space-size=2048 src/index.js",
    "start": "node --max-old-space-size=4096 --max-semi-space-size=64 src/index.js",
    "start:production": "node --max-old-space-size=8192 --max-semi-space-size=128 --optimize-for-size --gc-interval=100 src/index.js",
    "start:high-memory": "node --max-old-space-size=16384 --max-semi-space-size=256 src/index.js",
    "lint": "biome lint ./src",
    "lint:fix": "biome lint --write ./src",
    "format": "biome format ./src",
    "format:write": "biome format --write ./src",
    "check": "biome check ./src",
    "check:fix": "biome check --write ./src",
    "setup:db": "node setup-database.js",
    "verify": "node verify-system.js",
    "seed:schemas": "node src/data/seed-event-schemas.js && node src/data/mark-inactive-events.js",
    "seed:clevertap-template": "node src/data/seed-clevertap-template.js",
    "seed:ui-config": "node src/data/seed-ui-config.js",
    "sync:schemas": "node scripts/sync-event-schemas.js",
    "sync:schemas:interactive": "./scripts/sync-schemas.sh",
    "restore:schemas": "node scripts/restore-from-backup.js",
    "test": "cd test && npm install && npm test",
    "test:ci": "cd test && npm install --prefer-offline && npm run test:ci",
    "test:install": "cd test && npm install",
    "prepare": "husky || true",
    "simulator": "node webhook-simulator.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "abort-controller": "^3.0.0",
    "axios": "^1.13.4",
    "bcryptjs": "3.0.3",
    "cors": "2.8.5",
    "dotenv": "^17.3.1",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "mongodb": "4.17.2",
    "morgan": "1.10.1",
    "multer": "^2.0.2",
    "mysql2": "3.15.3",
    "node-cron": "^3.0.3",
    "node-fetch": "^2.7.0",
    "nodemailer": "^8.0.1",
    "openai": "^6.16.0",
    "puppeteer": "^19.11.1",
    "uuid": "^13.0.0",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "nodemon": "3.0.1"
  },
  "lint-staged": {
    "src/**/*.js": [
      "biome check --write"
    ]
  }
}
